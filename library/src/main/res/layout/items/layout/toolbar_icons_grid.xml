<android.support.v7.widget.GridLayout
    android:id="@+id/iconsRow"
    style="@style/PreviewContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/icons_preview_row"
    android:layout_marginRight="@dimen/icons_preview_row"
    android:layout_marginTop="@dimen/tool_bar_top_padding"
    android:gravity="center"
    app:alignmentMode="alignBounds"
    app:orientation="horizontal">

    <ImageView
        android:id="@+id/iconOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="invisible"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="invisible"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="invisible"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconFour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="invisible"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconFive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="gone"
        app:layout_column="4"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconSix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="gone"
        app:layout_column="5"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconSeven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="gone"
        app:layout_column="6"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iconEight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/lists_padding"
        android:src="@drawable/ic_na_launcher"
        android:visibility="gone"
        app:layout_column="7"
        app:layout_columnWeight="1"
        app:layout_row="0"
        tools:ignore="ContentDescription"/>

</android.support.v7.widget.GridLayout>