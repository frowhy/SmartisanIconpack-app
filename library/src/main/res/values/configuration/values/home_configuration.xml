<resources>

    <!--
    Do you want the icons in toolbar to be randomized?
    True, means yes.
    False, means no.
    -->
    <bool name="shuffle_toolbar_icons">true</bool>

    <!--
    Do you want to let user see the device wallpaper in toolbar?
    True, means yes.
    False, means no.
    -->
    <bool name="enable_user_wallpaper_in_toolbar">true</bool>

    <!--
       Do you want the app to use palette api in toolbar header?
       True, means yes.
       False, means no.
       -->
    <bool name="use_palette_api_in_toolbar">true</bool>

    <!--
    Do you want to hide "Icon Pack in numbers" section?
    True, means yes.
    False, means no.
    -->
    <bool name="hide_pack_info">false</bool>

    <!--
    How many icons does your app include?
    -->
    <integer name="icons_amount">600</integer>

    <!--
    How many wallpapers does your app include?
    -->
    <integer name="walls_amount">100</integer>

    <!--
    How many Zooper widget does your app include?
    (Don't worry, it will be ignored if your app doesn't include Zooper).
    -->
    <integer name="zooper_widgets">0</integer>


    <string-array name="apps_titles">
    </string-array>

    <string-array name="apps_descriptions">
    </string-array>

    <string-array name="apps_icons">
    </string-array>

    <string-array name="apps_packages">
    </string-array>

</resources>