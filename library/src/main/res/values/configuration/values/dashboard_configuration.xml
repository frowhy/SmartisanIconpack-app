<resources>

    <!-- Option to enable Log messages-->
    <bool name="debugging">true</bool>

    <!--
    Tabs to be used as primary drawer items
    The Home section will be added automatically
    Other possible tabs:
    Previews, Wallpapers, Requests, Apply, FAQs, Zooper
    Make sure you add the tabs with the exact word as the options listed, with the proper caps as well
    Make sure you have an Apply section!
    -->
    <string-array name="primary_drawer_items">
        <item>Previews</item>
        <item>Wallpapers</item>
        <item>Requests</item>
        <item>Apply</item>
        <item>FAQs</item>
        <item>Zooper</item>
        <item>Kustom</item>
    </string-array>

    <!--
       Credits and settings will automatically be added as secondary items
   -->

    <!-- Specify splashscreen color
    Can be LightLaunchScreen or DarkLaunchScreen
    -->
    <style name="AppTheme.LaunchScreen" parent="@style/AppTheme.Base.LightLaunchScreen"/>

    <!-- Default theme
    1. Light
    2. Dark
    3. Clear
    4. Auto (Light in the morning & Dark in the night)
    -->
    <integer name="default_theme">1</integer>

    <!--
    Navigation Drawer Header Style:
    1. Normal
    2. Mini
    3. No header
    -->
    <integer name="nav_drawer_header_style">1</integer>

    <!--
    Do you want the app name and version in the drawer header?
    True, means yes.
    False, means no.
    -->
    <bool name="with_drawer_texts">true</bool>

    <!--
    Mini Navigation Drawer Header Solid Color?
    True, means that the drawer header will use the primary color instead of a picture.
    False, means that the drawer header will use the 'header' picture.
    You can ignore this if you won't use the mini header style.
    -->
    <bool name="mini_header_solid_color">false</bool>

    <!--
    Do you want the app to use the icons based changelog, instead of texts one?
    True, means the icons based changelog will be used.
    False, mean the text based changelog will be used.
    -->
    <bool name="icons_changelog">false</bool>

    <!--
    Do you have a website?
    Something like: www.myrealcustomwebsite.com
    True, means yes.
    False, means no.
    -->
    <bool name="you_have_a_website">true</bool>

    <!--
    Do you want to use Light Status Bar in Light, or Dark theme?
    True, means yes.
    False, means no.
    -->
    <bool name="light_statusbar_in_light_theme">true</bool>
    <bool name="light_statusbar_in_dark_theme">false</bool>
    <bool name="light_statusbar_in_clear_theme">false</bool>


    <!--donations stuff-->

    <!--whichever sections you set up will automatically be added in the app-->

    <!--google stuff; MAKE SURE THAT THE THREE ARRAYS BELOW ALL HAVE THE SAME NUMBER OF ITEMS,
    OR ELSE THIS WON'T WORK-->
    <string-array name="nonconsumable_google_donation_items">
        <!--Put NONCONSUMABLE google items here-->
    </string-array>

    <string-array name="consumable_google_donation_items">
        <!--
        Put CONSUMABLE google items here
        If one of the nonconsumable products is shown as purchased,
        it will enable the pro boolean and will switch to here.
        Preferably, this should be an exact replica of the previous list, but with consumable items
        -->
    </string-array>

    <string-array name="google_donations_catalog">
        <!--
        Put name of donation items here
        -->
    </string-array>

    <!--paypal stuff; must all be completed for this to be enabled-->

    <!--add your email here-->
    <string name="paypal_user"></string>

    <!--paypal currency code (ie CAD); make sure this is a valid code-->
    <string name="paypal_currency_code"></string>

</resources>