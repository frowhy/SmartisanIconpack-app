<resources>
    
    <style name="Toolbar.Popup.AppCompat" parent="Theme.AppCompat.Light"/>
    
    <style name="Toolbar.AppCompat.Responsive.Light" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/toolbar_text_light</item>
        <item name="android:textColorSecondary">@color/toolbar_text_light</item>
        <item name="colorControlHighlight">@color/toolbar_text_light</item>
    </style>
    
    <style name="Toolbar.AppCompat.Responsive.Dark" parent="AppTheme.Base.Dark">
        <item name="android:textColorPrimary">@color/toolbar_text_dark</item>
        <item name="android:textColorSecondary">@color/toolbar_text_dark</item>
        <item name="colorControlHighlight">@color/toolbar_text_dark</item>
    </style>
    
    <style name="Responsive.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
    </style>
    
    <style name="Responsive.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>
    
    <style name="Responsive.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Responsive.ActionMode" parent="Widget.AppCompat.ActionMode">
        <!--
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
    </style>
    
    <style name="Responsive.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:minWidth">48dp</item>
    </style>
    
    <style name="CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/cards_spacing</item>
        <item name="android:paddingRight">@dimen/cards_spacing</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="ZooperCardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/cards_spacing</item>
        <item name="android:paddingRight">@dimen/cards_spacing</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
    </style>
    
    <style name="AboutContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_little_margin</item>
        <item name="android:paddingRight">@dimen/card_little_margin</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="ListsContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_little_margin</item>
        <item name="android:paddingRight">@dimen/card_little_margin</item>
        <item name="android:paddingTop">@dimen/card_little_margin</item>
        <item name="android:paddingBottom">@dimen/card_little_margin</item>
    </style>
    
    <style name="PreviewContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/icons_preview_row</item>
        <item name="android:paddingRight">@dimen/icons_preview_row</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
    </style>
    
    <style name="HomeCardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/welcome_card_content_padding</item>
        <item name="android:paddingRight">@dimen/welcome_card_content_padding</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>