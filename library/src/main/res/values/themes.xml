<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppThemeDark" parent="AppTheme.Base.Dark"/>

    <style name="AppThemeClear" parent="AppTheme.Base.Clear"/>

    <style name="AppTheme.Base" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/light_theme_primary</item>
        <item name="primaryColor">@color/light_theme_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_primary_dark</item>
        <item name="primaryDarkColor">@color/light_theme_primary_dark</item>
        <item name="colorAccent">@color/light_theme_accent</item>
        <item name="accentColor">@color/light_theme_accent</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="md_title_color">@color/md_dialog_title_light</item>
        <item name="md_content_color">@color/md_dialog_content_light</item>
        <item name="md_positive_color">@color/md_button_text_light</item>
        <item name="md_negative_color">@color/md_button_text_light</item>
        <item name="md_neutral_color">@color/md_button_text_light</item>
        <item name="md_background_color">@color/md_background_color_light</item>
        <item name="colorCardBackground">@color/card_light_background</item>
        <item name="homeBackground">@color/home_light_background</item>
        <item name="drawablesTintColor">@color/drawable_tint_light</item>
        <item name="fabTintColor">@color/fab_background_tint_light_theme</item>
        <item name="toolbarTextColor">@color/toolbar_text_light</item>
        <item name="tabsIndicatorColor">@color/tabs_indicator_light</item>
        <item name="tabsNormalTextColor">@color/tabs_normal_text_light</item>
        <item name="tabsSelectedTextColor">@color/tabs_selected_text_light</item>

        <item name="actionModeStyle">@style/Responsive.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Responsive.ActionButton.CloseMode</item>

        <item name="toolbarStyle">@style/Responsive.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Responsive.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Responsive.ActionButton.Overflow</item>

        <item name="actionBarTheme">@style/Toolbar.AppCompat.Responsive.Light</item>
        <item name="actionBarPopupTheme">@style/Toolbar.Popup.AppCompat</item>

    </style>

    <style name="AppTheme.Base.Clear" parent="AppTheme.Base.Dark">
        <item name="colorCardBackground">@color/card_clear_background</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/clear_bg</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Clear</item>
        <item name="homeBackground">@color/home_clear_background</item>
        <item name="material_drawer_background">@color/material_drawer_clear_background</item>
        <item name="md_background_color">@color/md_background_color_clear</item>
        <item name="fabTintColor">@color/fab_background_tint_clear_theme</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/dark_theme_primary</item>
        <item name="primaryColor">@color/dark_theme_primary</item>
        <item name="colorPrimaryDark">@color/dark_theme_primary_dark</item>
        <item name="primaryDarkColor">@color/dark_theme_primary_dark</item>
        <item name="colorAccent">@color/dark_theme_accent</item>
        <item name="accentColor">@color/dark_theme_accent</item>
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="md_title_color">@color/md_dialog_title_dark</item>
        <item name="md_content_color">@color/md_dialog_content_dark</item>
        <item name="md_positive_color">@color/md_button_text_dark</item>
        <item name="md_negative_color">@color/md_button_text_dark</item>
        <item name="md_neutral_color">@color/md_button_text_dark</item>
        <item name="md_background_color">@color/md_background_color_dark</item>
        <item name="colorCardBackground">@color/card_dark_background</item>
        <item name="homeBackground">@color/home_dark_background</item>
        <item name="drawablesTintColor">@color/drawable_tint_dark</item>
        <item name="fabTintColor">@color/fab_background_tint_dark_theme</item>
        <item name="toolbarTextColor">@color/toolbar_text_dark</item>
        <item name="tabsIndicatorColor">@color/tabs_indicator_dark</item>
        <item name="tabsNormalTextColor">@color/tabs_normal_text_dark</item>
        <item name="tabsSelectedTextColor">@color/tabs_selected_text_dark</item>


        <item name="actionModeStyle">@style/Responsive.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Responsive.ActionButton.CloseMode</item>

        <item name="toolbarStyle">@style/Responsive.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Responsive.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Responsive.ActionButton.Overflow</item>

        <item name="actionBarTheme">@style/Toolbar.AppCompat.Responsive.Dark</item>
        <item name="actionBarPopupTheme">@style/Toolbar.Popup.AppCompat</item>

    </style>

    <style name="ThemeOverlay.AppCompat.Clear" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@color/home_clear_background</item>
        <item name="android:colorBackground">@color/home_clear_background</item>
    </style>

    <style name="AppTheme.Base.LightLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_light</item>
        <item name="colorPrimaryDark">@color/splash_light_statusbar</item>
        <item name="colorAccent">@color/splash_light_statusbar</item>
    </style>

    <style name="AppTheme.Base.DarkLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
        <item name="colorPrimaryDark">@color/splash_dark_statusbar</item>
        <item name="colorAccent">@color/splash_dark_statusbar</item>
    </style>

    <style name="EmptyActivity" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>