<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/light_theme_primary_dark</item>
        <item name="android:navigationBarColor">@color/light_theme_navbar</item>
        <item name="drawablesTintColor">@color/drawable_tint_light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppThemeClear" parent="AppTheme.Base.Clear">
        <item name="android:navigationBarColor">@color/clear_bg</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme.Base.Dark">
        <item name="android:statusBarColor">@color/dark_theme_primary_dark</item>
        <item name="android:navigationBarColor">@color/dark_theme_navbar</item>
        <item name="drawablesTintColor">@color/drawable_tint_dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

</resources>